<div class="details">
    {{#if @selectedPlanet }} 
        <div>
            <h2>{{@selectedPlanet.name}}</h2>
            <p>Environment: <span class="environment">{{ @selectedPlanet.environment }}</span></p>
            <p>Resources:</p>
            <ul>
                {{#each @selectedPlanet.resources as |resource|}} 
                    <li key="index" class="resource">{{ resource }}</li> 
                {{/each}}
            </ul>
        </div>
        <div class="select-favourite">
            <div class="control">
                <input id="fav-check" type="checkbox" checked={{ @selectedPlanet.isFavourite }} onChange="" />
                <label htmlFor="fav-check">Favourite</label>
            </div>
        </div>
    {{else}}
        <span></span>
    {{/if}}
</div>
