<div class="details">
    {{#if this.planet }} 
        <div>
            <h2>{{this.planet.name}}</h2>
            {{yield}} 
            <p>Environment: <span class="environment">{{ this.planet.environment }}</span></p>
            <p>Resources:</p>
            <ul>
                {{#each this.planet.resources as |resource|}} 
                    <li key="index" class="resource">{{ resource.text }}</li> 
                {{/each}}
            </ul>
        </div>
        <div class="select-favourite">
            <div class="control">
                <input id="fav-check" type="checkbox" checked={{this.planet.isFavourite}} onChange="" />
                <label htmlFor="fav-check">Favourite</label>
            </div>
        </div>
    {{else}}
        <span></span>
    {{/if}}
</div>
